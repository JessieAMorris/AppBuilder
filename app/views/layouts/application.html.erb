		</script>
  </head>
  <body>
    <div id="container">
      <div id="branding">
        <div id="appbuilder-logo">
          <%= link_to  image_tag("appbuilder-logo.png", :alt => "Kynetx appbuilder" ), root_url %>
        </div>
        <div id="usernav">
  				<% if current_user %>	
  					<a href="#" class="user"><%= current_user.name %></a> |
  					<a href="http://docs.kynetx.com" target="_blank">Help</a> |
  			    <%= link_to "Logout", logout_path %>
  			  <% end %>
  			</div><!-- #usernav -->
      </div><!-- #branding -->
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
			<div class="body_content">
				<%= yield %>
			</div>
    </div>

  </body>
</html>
