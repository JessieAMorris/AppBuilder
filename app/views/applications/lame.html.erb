<%= javascript "jquery.hotkeys-0.7.9.min.js" %>
<%= javascript "tabby.js" %>
<%= javascript "lame-edit.js" %>
<%= stylesheet "lame-edit.css" %>
<% content_for :head do %>
<!--[if IE 7]>
  <style type="text/css" media="screen" src="/stylesheets/lame-ie-7.css"/>
<![endif]-->
<% end %>
<%= app_menu :edit, params[:id] %>
<div id="editor" appid="<%= @application.application_id %>">
  <div id="control-tray">
    <img id="save" src="/images/save.png" title="CTRL+S or CMD+S to save"/>
    <img id="settings" src="/images/settings.png" title="change options for when editor loads" />
    <img id="good" src="/images/good.png" title="Successfully saved" />
    <img id="warning" src="/images/warning.png" title="CTRL+E to toggle error tray" />
    <div id="last-save">00:00</div>
  </div>
  <%= text_area_tag(:app, @application.krl, :cols => 20, :rows => 40 ) %>
  <img id="saving" title="Saving your awesome Kynetx app!" alt="Saving your awesome Kynetx app!" src="/images/saving.gif" />
  <img id="success" title="We did it!" alt="We did it!" src="/images/success.png" />
  <img id="fail" title="Oh No! Something when wrong." alt="Oh No! Something when wrong." src="/images/fail.png" />
</div>
<div id="error-tray">
  <table border="0" cellspacing="5" cellpadding="5"></table>
  <div id="unknown-error"></div>
</div>
<img id="close-error-tray" title="Close with CTRL+E or click warning triangle in control tray or click this button" src="/images/close-red.png" />